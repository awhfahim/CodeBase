@model CreateNidModel
@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-12">
    <div class="card">
        <div class="card-header">Create New NID</div>
            <form asp-action="create" asp-controller="nid" asp-area="admin" asp-antiforgery="true">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control" asp-for="Name" onfocus="this.style.backgroundColor = 'yellow'"
                        onblur="this.style.backgroundColor = 'white'"
                        onclick="alert('Hi my name is fahim')"/>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Age">Age</label>
                        <input type="text" class="form-control" asp-for="Age" />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Gender">Gender</label>
                        <input type="text" class="form-control" asp-for="Gender" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input type="text" class="form-control" asp-for="Address" />
                    </div>

                    <div class="form-group">
                        <label asp-for="DateOfBirth">Date Of Birth</label>
                        <input type="datetime-local" class="form-control" asp-for="DateOfBirth" />
                    </div>

                    <div class="form-group">
                        <label asp-for="PermanentAddress">PermanentAddress</label>
                        <input type="text" class="form-control" asp-for="PermanentAddress" />
                    </div>

                    <div class="form-group">
                        <label asp-for="FatherName">Father Name</label>
                        <input type="text" class="form-control" asp-for="FatherName" />
                    </div>

                    <div class="form-group">
                        <label asp-for="MotherName">Mother Name</label>
                        <input type="text" class="form-control" asp-for="MotherName" />
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
    </div>

</div>

