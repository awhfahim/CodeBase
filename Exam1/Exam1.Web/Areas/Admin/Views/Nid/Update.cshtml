@model NIDUpdateModel
@{
    ViewData["Title"] = "Update";
}


<div class="container col-md-12">
    <div class="card">
        <div class="card-header">Create New NID</div>
        <form asp-action="update" asp-controller="nid" asp-area="admin" asp-antiforgery="true">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="UpdateDTO.Name">Name</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.Name" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.Age">Age</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.Age" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.Gender">Gender</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.Gender" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.Address">Address</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.Address" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.DateOfBirth">Date Of Birth</label>
                    <input type="datetime-local" class="form-control" asp-for="UpdateDTO.DateOfBirth" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.PermanentAddress">PermanentAddress</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.PermanentAddress" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.FatherName">Father Name</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.FatherName" />
                </div>

                <div class="form-group">
                    <label asp-for="UpdateDTO.MotherName">Mother Name</label>
                    <input type="text" class="form-control" asp-for="UpdateDTO.MotherName" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

</div>



