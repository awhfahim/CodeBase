@model ProductUpdateModel
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">Update Existing Product</div>
        <div class="card-body">
            <form asp-action="update" asp-area="admin" asp-controller="product" asp-antiforgery="true">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Weight">Weight</label>
                    <input type="text" asp-for="Weight" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


